								"exec": [
									"",
									"const host = pm.environment.get('host');",
									"const groupId = pm.environment.get('groupId');",
									"const expectedBody = JSON.parse(pm.request.body.raw);",
									"",
									"// test status code",
									"pm.test('should create group', function () {",
									"    pm.response.to.have.status(201);",
									"    // pm.response.to.have.header('Location', '/group' + groupId);",
									"});",
									"",
									"//test if object was created",
									"pm.sendRequest('http://' + host + '/group/' + groupId, function (err, res) {",
									"  if (err) { console.log(err); }",
									"  pm.test('should have persisted group', function () {",
									"    pm.expect(res).to.equal(expectedBody);",
									"  });",
									"});"
								]
							}
